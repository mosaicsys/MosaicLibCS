<ResourceDictionary x:Class="MosaicLib.WPF.Resources.BasicResources"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:wpfControls="clr-namespace:MosaicLib.WPF.Controls"
             mc:Ignorable="d">
    <Style x:Key="LED_Std20x20_GrayGreen" TargetType="{x:Type wpfControls:BasicLED}">
        <Setter Property="Height" Value="20"/>
        <Setter Property="Width" Value="20"/>
        <Setter Property="BorderWidth" Value="2"/>
        <Setter Property="ActiveColor" Value="Green"/>
        <Setter Property="InactiveColor" Value="DarkGray"/>
    </Style>
    <Style x:Key="LED_Std20x20_RedGreen" TargetType="{x:Type wpfControls:BasicLED}">
        <Setter Property="Height" Value="20"/>
        <Setter Property="Width" Value="20"/>
        <Setter Property="BorderWidth" Value="2"/>
        <Setter Property="ActiveColor" Value="Green"/>
        <Setter Property="InactiveColor" Value="Red"/>
    </Style>
</ResourceDictionary>
